### OPEN PROGRAM ###
# Open rofi
super + r
 rofi -show combi

# Open web browser
super + q
 $WEB_BROWSER

# Open IDE
super + a
 $IDE_GUI

# Open file browser
super + {e, shift e}
 {$TERMINAL -e $FILE,\
 $FILE_GUI}

# Open text editors
super + {t, shift t}
 {$TERMINAL -e $EDITOR,\
 $EDITOR_GUI}

# Open pinger
super + p
 st ping 1.1.1.1 -i 0.2
 
# Screen locker
{control + alt + l, XF86ScreenSaver}
 $LOCKSCREEN

# Keyboard layout
super + alt + space
 rofi-keyboard

# Open terminal
super + Return
 $TERMINAL

# Open Screenshot tool
super + Print
 bash -c $SCREENSHOT

# Open custom script menu
super + z 
 rofi-select

# Restart keybind 
control alt k
 pkill -SIGUSR1 sxhkd

# Chain test
alt x ; {h,j}
 notify-send {"HH","JJ"}

# Open communication apps
super w ; {w,l,f}
 firefox --new-window {https://web.whatsapp.com,\
 https://www.linkedin.com/,\
 https://www.facebook.com,\}

# Open other apps
super w ; {k,r,g,m,c}
 {keepassxc,\
 firefox --new-window https://www.reddit.com,\
 firefox --new-window https://github.com,\
 pgrep mpd >/dev/null && $TERMINAL -e ncmpcpp || (mpd && $TERMINAL -e ncmpcpp),\
 speedcrunch}

# Open Gmail
alt m ; {1,2,3}
 firefox --new-window https://mail.google.com/mail/u/{0,1,2}

# Brightness
{XF86MonBrightnessUp, XF86MonBrightnessDown}
 xbacklight -{inc,dec} 25 -time 100

# Volume
XF86Audio{RaiseVolume,LowerVolume,Mute}
 amixer -q set Master {10%+ unmute,10%- unmute,toggle}

# Playback
XF86Audio{Next,Prev,Play,Stop}
mpc {next,prev,toggle,stop}