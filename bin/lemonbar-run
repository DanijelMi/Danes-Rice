_keyboard(){
	local kd_layout kb_caps

	# Checks if the current layout is set to Greek (adjust accordingly).
	# If yes, the indicator will be displayed, else it is assumed that
	# English is being used.
	if [ "$(setxkbmap -query | sed '/^layout/!d ; s,^.*:[\ ]*,,g')" = 'gr' ]; then
		kb_layout="%{B$backgroundalt}%{U$foreground}%{+u} EL %{-u}%{U-}%{B-}"
	fi

}
keyboardlayout(){
    #TODO: use setxkbmap -query and display in layout:variant format
    echo dummy
    # _info=$(setxkbmap -query | tail -n 2)
    # echo -en "$($_info | grep layout | awk '{print $2}') $($_info | grep variant | awk '{print $2}'"
    # echo -en "$(setxkbmap -query | sed '/^layout/!d ; s,^.*:[\ ]*,,g')"
}

# Show if caps_lock is on
capslock(){
    if [ "$(xset -q | grep Caps | awk '{ print $4 }')" = 'on' ]; then
        echo -en "%{B#900}%{U#006}%{+u} CAPS %{-u}%{U-}%{B-}"
    fi
}


vol(){
    amixer get Master | sed -n 's/^.*\[\([0-9]\+\)%.*$/\1/p'| uniq
}

pac(){
    pup="$(pacman -Qqu | wc -l)"
    if [ $pup -gt 0 ]; then 
        echo -en "Outdated:$pup"
    else
        echo -en ""
    fi
}

groups() {
    cur=`xprop -root _NET_CURRENT_DESKTOP | awk '{print $3}'`
    tot=`xprop -root _NET_NUMBER_OF_DESKTOPS | awk '{print $3}'`

    for w in `seq 0 $((cur - 1))`; do line="${line}="; done
    line="${line}|"
    for w in `seq $((cur + 2)) $tot`; do line="${line}="; done
    echo $line
}

parseNetwork(){
    inp=("$@");

    if [[ ${#inp} -gt 6 ]]; then # 6+ digits
        first_cut=$((${#inp} - 5));
        second_cut=$(($first_cut - 1));
        echo "${inp:0:second_cut }.${inp:second_cut:1}MB";
    fi

    if [[ ${#inp} -lt 7 ]] && [[ ${#inp} -gt 3 ]]; then # 5 and 4 digits
        first_cut=$((${#inp} - 2));
        second_cut=$(($first_cut - 1));
        echo "${inp:0:second_cut }KB";
    fi

    if [[ ${#inp} -lt 4 ]]; then # 3 digits
        printf "%3dB \n" $inp ;
    fi
}

# Takes a sample of bytes transmitted and recieved since the boot time for each active interface
net_sample(){
    NEW_RX=()   # DOWNLOAD
    for i in "${!net_if_array[@]}"; do
        NEW_RX[$i]=$(cat /sys/class/net/${net_if_array[$i]}/statistics/rx_bytes)
    done
    NEW_TX=()   # UPLOAD
    for i in "${!net_if_array[@]}"; do
        NEW_TX[$i]=$(cat /sys/class/net/${net_if_array[$i]}/statistics/tx_bytes)
    done
    echo ${NEW_RX[0]} ${NEW_TX[0]} ${NEW_RX[1]} ${NEW_TX[1]} 
}
net_mark=(0 0 0 0 0 0 0 0)  # Exists only so that the first math operations aren't invalid

# Calculates and nicely formats the byte delta from the last taken sample (passed as array arg) and new net_sample
net_calculate(){
    fn_args=("$@")
    net_mark=($(net_sample))
    output=""
    for i in "${!net_mark[@]}"; do
        if [ $(($i % 2)) -eq 0 ]; then
            output+=" ${net_if_array[ $(( $i/2 )) ]}-"
            output+=$( printf "%0*d\n" 3 $(( (${net_mark[$i]} - ${fn_args[$i]}) / ($(date +%s) - $UTC) / 1000 )) ):
            # output+=$(echo D:$(parseNetwork $(( (${net_mark[$i]} - ${fn_args[$i]}) / ($(date +%s) - $UTC) )) )/)
        else
            output+=$( printf "%0*d\n" 3 $(( (${net_mark[$i]} - ${fn_args[$i]}) / ($(date +%s) - $UTC) / 1000 )) )
            # output+="$(echo U:$(parseNetwork $(( (${net_mark[$i]} - ${fn_args[$i]}) / ($(date +%s) - $UTC) )) ))"
        fi
    done
    echo $output
}

feed_lemon(){   # I'm not changing this function name
    while true; do
        echo -e -n "\
%{l}%{O55}%{+u}%{U#900} \
$(date "+%H:%M") \
$(vol) \
$(mem) \
$(groups) \
%{F#000000}this is an%{F-} example.\
%{B#900}%{A:alacritty:}Spawn Terminal%{A}%{B-} \
$(capslock) \
$(bat)" 
        sleep 0.5
    done
}

feed_lemon | lemonbar -p \
-u 1 \
-g 800x14+50+2 \
-o 0 \
-F#FFFFFFFF -B#FF444444 \
-f "DejaVu Sans Mono"-9 \
-f FontAwesome-9 \
| while read line; do eval "${line} &" ; done


